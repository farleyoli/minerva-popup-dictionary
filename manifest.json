{
  "name": "Minerva Pop-up Dictionary",
  "version": "1.0",
  "description": "English dictionary to be used with Chrome!",
  "permissions": 
  ["activeTab",
      "storage",
      "<all_urls>",
      "clipboardWrite",
      "unlimitedStorage",
      "webRequestBlocking"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["content.js", "anki.js"],
      "css": ["popup.css"]
    }
  ],
  "web_accessible_resources": [
      "dictionary/*.json"
  ],
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
    }
  },
  "icons": {
  },
  "options_page": "options.html",
  "manifest_version": 2
}
